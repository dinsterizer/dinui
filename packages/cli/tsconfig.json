{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es2022"],
    "types": ["@types/node"],

    "skipLibCheck": true,
    "target": "es2022",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "moduleResolution": "Bundler",
    "module": "es2022",
    "outDir": "build",
    "sourceMap": true,

    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src"]
}
